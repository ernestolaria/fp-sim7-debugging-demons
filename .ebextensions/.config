commands:
  01_run_script:
    command: |
      nginx -s stop
      cd /var/app/current/
      pipenv run pip install --requirement requirements.txt
      pipenv shell
      python3 api/utils/dbSetup.py
      chmod +x ./scripts/build.sh ./scripts/prod.sh ./scripts/init.sh
      cd api/ && gunicorn -b 0.0.0.0:80 main:app
